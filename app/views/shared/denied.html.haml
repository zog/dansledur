!!! 5
%html
  %head
    %meta{ :'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
    %meta{ :property => 'og:image', :content => 'http://bordeauxhype.com/images/preview.png' } 
    %meta{ :name => "viewport", :content => "user-scalable=no;width=device-width" }

    %title Dans le Dur
    %link{ :rel => "icon", :type => "image/png", :href => "/images/favicon.png" }
    %link{ :rel => "apple-touch-icon-precomposed", :href => "/images/ios-icon.png" }
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tag
    =# render 'shared/ga'

  %body
    #error-inner
      = image_tag "logo-error.png", :alt => "error"
      %h1 Accès interdit
      %h2 Ben dis-donc, tu te crois chez mémé ?!
      %p 
        Retour à 
        = link_to "dansledur.com", "/"
        ou 
        = link_to "contactez-nous", "mailto:contact@dansledur.com"
        au sujet d'un problème.
      = image_tag "icon-logo-mini.png", :alt => "error"
    #overlay-error
    #error-img
      = image_tag "background-error.jpg", :alt => "Dans le Dur !!"