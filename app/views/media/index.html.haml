#main
  %h1 Dans le Dur récents
  %ul.items
    - @medias.each do |m|
      = render partial: 'media/compact', locals: {m: m}
      
  #pagination
    - if @medias.current_page.to_i > 1
      = link_to "« Plus récents", media_path(params.merge(page:  @medias.current_page.to_i - 1))
    - if @medias.current_page.to_i < @medias.total_pages
      = link_to "Plus anciens »", media_path(params.merge(page:  @medias.current_page.to_i + 1))

= render partial: 'media/misc'